<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
													 xmlns:app="http://schemas.android.com/apk/res-auto"
													 android:layout_width="match_parent"
													 android:layout_height="match_parent"
										             android:fitsSystemWindows="true"
										   	         tools:openDrawer="end"
										             tools:context=".chatOFG.ui.COFragment"
													 xmlns:tools="http://schemas.android.com/tools">
	
	<androidx.fragment.app.FragmentContainerView
			android:id="@+id/nav_content_co"
			android:name="androidx.navigation.fragment.NavHostFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:defaultNavHost="true"
			app:navGraph="@navigation/co_navigation"
	/>
	<LinearLayout
			android:id="@+id/co_side_sheet"
			app:layout_behavior="com.google.android.material.sidesheet.SideSheetBehavior"
			style="@style/Widget.Material3.SideSheet"
			android:layout_width="256dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:elevation="5dp">
		<Button
				android:text="@string/co_disconnect"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/button_disconnect"/>
	</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
