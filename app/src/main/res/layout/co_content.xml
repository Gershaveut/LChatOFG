<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/co_content"
		android:fitsSystemWindows="true"
		tools:openDrawer="end"
		tools:ignore="VisualLintTextFieldSize">
	<include layout="@layout/co_chat" android:id="@+id/co_chat"/>
	<LinearLayout
			android:id="@+id/menu_side_sheet"
			app:layout_behavior="com.google.android.material.sidesheet.SideSheetBehavior"
			style="@style/Widget.Material3.SideSheet"
			android:layout_width="256dp"
			android:layout_height="match_parent"
			android:orientation="vertical">
		<Button
				android:text="@string/co_disconnect"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:id="@+id/button_disconnect"/>
		<Button
			android:text="@string/co_broadcast_send"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:id="@+id/button_broadcast"/>
		<Button
			android:id="@+id/button_custom_message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:text="@string/co_custom_message"/>
		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recycler_users"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
