<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chatOFG.ui.COFragment">
    
    <EditText
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editMessage"
            app:layout_constraintStart_toStartOf="parent"
            android:minHeight="48dp"
            android:hint="@string/co_message"
            android:importantForAutofill="no" app:layout_constraintEnd_toStartOf="@+id/buttonSend"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/guidelineSendBar"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/buttonSend"
            android:contentDescription="@string/co_message"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guidelineSendBar"/>
    <ScrollView
            android:layout_width="0dp"
            android:id="@+id/chatScrollView"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/barrierSendBar">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/viewChat"
                    android:layout_marginBottom="0dp"
            />
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_end="24dp" android:id="@+id/guidelineSendBar"/>
    <androidx.constraintlayout.widget.Barrier
            android:layout_width="0dp"
            android:id="@+id/barrierSendBar"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:constraint_referenced_ids="editMessage, buttonSend"
            app:barrierDirection="top"
    />
</androidx.constraintlayout.widget.ConstraintLayout>